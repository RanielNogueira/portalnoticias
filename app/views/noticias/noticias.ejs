<!DOCTYPE html>
	<html lang="pt-br">
		<head>
			<meta charset="utf-8"/>
			<title>Notícias</title>
		</head>
	<body>

		<h1>Notícias</h1>
		
		<table border="1">
			<tr>
				<th>ID</th>
				<th>Titulo</th>
				<th>Noticia</th>
				<th>Data de Cadastro</th>
				<th>Data da Noticia</th>
				<th>Ações</th>
			</tr>
			<% for(var i=0;i < noticias.length;i++) { %>
			<tr>
				<td><%= noticias[i].id_noticia %></td>
				<td><%= noticias[i].titulo %></td>
				<td><%= noticias[i].noticia %></td>
				<td><%= noticias[i].data_criacao %></td>
				<td><%= noticias[i].data_noticia %></td>
				<td><a href="/noticias/editar?id=<%= noticias[i].id_noticia%>">Editar</a> </td>
			</tr>
			<% } %>
		</table>
	</body>
</html>